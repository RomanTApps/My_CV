<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EDD1D1">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="32dp"
        tools:context=".ui.info.InfoFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@tools:sample/avatars" />

        <TextView
            android:id="@+id/textName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Full name"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <TextView
            android:id="@+id/textSummary"
            style="@style/AppTheme.Text"
            android:layout_margin="0dp"
            android:gravity="center"
            android:text="Summary"
            app:layout_constraintEnd_toEndOf="@+id/textName"
            app:layout_constraintStart_toStartOf="@+id/textName"
            app:layout_constraintTop_toBottomOf="@+id/textName" />

        <ImageView
            android:id="@+id/imageView2"
            style="@style/AppTheme.Image"
            android:src="@drawable/ic_mail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textSummary" />

        <TextView
            android:id="@+id/textEmail"
            style="@style/AppTheme.Text"
            android:text="email"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/imageView3"
            style="@style/AppTheme.Image"
            android:src="@drawable/ic_phone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <TextView
            android:id="@+id/textPhone"
            style="@style/AppTheme.Text"
            android:text="phone number"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />


        <ImageView
            android:id="@+id/imageWeb"
            style="@style/AppTheme.Image"
            android:src="@drawable/ic_linkedin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <TextView
            android:id="@+id/textWebPage"
            style="@style/AppTheme.Text"
            android:text="WebPage"
            app:layout_constraintBottom_toBottomOf="@+id/imageWeb"
            app:layout_constraintStart_toEndOf="@+id/imageWeb"
            app:layout_constraintTop_toTopOf="@+id/imageWeb" />

        <ImageView
            android:id="@+id/imageGitHub"
            style="@style/AppTheme.Image"
            android:src="@drawable/ic_github"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageWeb" />

        <TextView
            android:id="@+id/textGitHub"
            style="@style/AppTheme.Text"
            android:text="GitHub"
            app:layout_constraintBottom_toBottomOf="@+id/imageGitHub"
            app:layout_constraintStart_toEndOf="@+id/imageGitHub"
            app:layout_constraintTop_toTopOf="@+id/imageGitHub" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
