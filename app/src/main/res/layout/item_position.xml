<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/image_company_logo"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_github" />

        <TextView
            android:id="@+id/text_company_name"
            style="@style/AppTheme.Text"
            android:text="Company_name"
            app:layout_constraintStart_toEndOf="@+id/image_company_logo"
            app:layout_constraintTop_toTopOf="@+id/image_company_logo" />

        <TextView
            android:id="@+id/text_position"
            style="@style/AppTheme.Text"
            android:text="position"
            app:layout_constraintStart_toEndOf="@+id/image_company_logo"
            app:layout_constraintTop_toBottomOf="@+id/text_company_name" />

        <TextView
            android:id="@+id/text_date"
            style="@style/AppTheme.Text"
            android:text="date"
            app:layout_constraintBottom_toBottomOf="@+id/image_company_logo"
            app:layout_constraintStart_toEndOf="@+id/image_company_logo"
            app:layout_constraintTop_toBottomOf="@+id/text_position" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
